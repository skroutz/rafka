[Unit]
Description=Kafka with a Redis API
After=network.target
Documentation=https://github.com/skroutz/rafka

[Service]
Type=simple
EnvironmentFile=-/etc/default/rafka
ExecStart=/usr/bin/rafka --config /etc/rafka/librdkafka.json $ARGS
TimeoutStopSec=10
User=rafka
Group=rafka
PrivateTmp=yes
PrivateDevices=yes
ProtectHome=yes
ReadOnlyPaths=/
LimitNOFILE=16384
Restart=on-failure

[Install]
WantedBy=multi-user.target
